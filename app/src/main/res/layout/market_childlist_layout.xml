<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
      <TextView
          android:id="@+id/market_area"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="50dp" />
      <TextView
          android:layout_weight="1"
          android:gravity="center"
          android:id="@+id/market_product_name"
          android:layout_width="match_parent"
          android:layout_height="50dp"  />
      <TextView
          android:id="@+id/market_average_price"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="50dp"  />
      <TextView
          android:id="@+id/market_fallorise"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="50dp" />
      <TextView
          android:id="@+id/market_minprice"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="50dp" />
      <TextView
          android:id="@+id/market_maxprice"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="50dp" />
      <TextView
          android:id="@+id/market_factory_area"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="50dp" />
      <TextView
          android:id="@+id/market_data"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="50dp" />
</LinearLayout>

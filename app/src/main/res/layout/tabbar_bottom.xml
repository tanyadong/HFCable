<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_main_page"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_main"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/home_red"/>
        <TextView
            android:id="@+id/txt_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/tabbar_bottom_main"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_mess"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_mess"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/info_black"/>
        <TextView
            android:id="@+id/txt_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/tabbar_bottom_info"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_find"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_find"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/market"/>
        <TextView
            android:id="@+id/txt_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/tabbar_bottom_market"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_mine"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_mine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/my"/>
        <TextView
            android:id="@+id/txt_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/tabbar_bottom_mine"/>
    </LinearLayout>
</LinearLayout>

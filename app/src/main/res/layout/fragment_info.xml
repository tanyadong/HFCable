<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/info_refresh"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    tools:context="com.hbhongfei.hfcable.fragment.InfoFragment">
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_listview_refresh"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <ListView
        android:id="@+id/fragment_info_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:divider="@null"
        android:dividerHeight="10dp">
    </ListView>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>


    <include
        android:id="@+id/no_internet_info"
        layout="@layout/internet_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>

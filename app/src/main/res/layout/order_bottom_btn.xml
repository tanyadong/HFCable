<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bottom_btn"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_order_cancle"
        android:text="@string/orderCancle"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/order_botton_btn_black"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/btn_order_goPay"
        android:text="@string/goPay"
        android:textColor="@color/colorRed"

        android:background="@drawable/order_botton_btn_red"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/btn_order_confirmReceipt"
        android:text="@string/confirmReceipt"
        android:textColor="@color/colorRed"
        android:visibility="visible"
        android:background="@drawable/order_botton_btn_red"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/btn_order_viewlogistics"
        android:text="@string/viewLogistics"
        android:textColor="@color/colorRed"
        android:visibility="gone"
        android:background="@drawable/order_botton_btn_red"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</LinearLayout>
